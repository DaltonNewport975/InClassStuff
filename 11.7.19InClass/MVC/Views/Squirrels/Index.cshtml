@model IEnumerable<MVC.Models.Squirrel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">


@foreach (var item in Model)
{
    <div class="squirrel">
        <h1>@item.Name</h1>

        @if (item.TeethSize > 3 )
        {
            <h3 style="background-color: darkred; color:yellow;">Those are some big teeth</h3>
        }
        else
        {
            <h3>How do you eat with such small teeth</h3>
        }

        <img src="@item.ImageURL"/>
    </div>
}
</div>

